
<div class="title-page space-padding-tb-50">
  <h3>{{page.title}}</h3>
  <img class="border" src="{{ 'border_title_blog_detail.png' | asset_url }}" alt="border">
      <p>{{page.content}}</p>
</div>

<div style="{% if section.settings.about_sifo_margin_top != blank %}margin-top: {{settings.about_sifo_margin_top}}px;{%endif%} {% if settings.about_sifo_margin_bottom != blank %}margin-bottom: {{settings.about_sifo_margin_bottom}}px;{% endif %}">
  <div class="container container-ver2">
    <div class="tab-v1 tab-shortcode space-80">
      <div class="custom-content">
        <div class="col-md-6">
          {% if settings.about_sifo_bg1 == blank %}
          {% capture _img_url %}about_info1.jpg{% endcapture %}
          <img src="{{ _img_url | asset_url}}" alt="">
          {% else %}
          <img src="{{ settings.about_sifo_bg1 | img_url:'master' }}" alt="Banner">
          {% endif %}
        </div>
        <div class="col-md-6">
          <h3>{{settings.about_sifo_tit1}}</h3>
