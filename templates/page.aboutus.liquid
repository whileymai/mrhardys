      <div class="custom-content engoc_60">
        <div class="col-md-6">
          <h3>{{settings.about_sifo_tit2}}</h3>
          	{{settings.about_sifo_con2}}
        </div>
        <div class="col-md-6">
          {% if settings.about_sifo_bg2 == blank %}
          {% capture _img_url %}about_info2.jpg{% endcapture %}
          <img src="{{ _img_url | asset_url}}" alt="">
          {% else %}
          <img src="{{ settings.about_sifo_bg2 | img_url:'master' }}" alt="Banner">
          {% endif %}
        </div>
      </div>
      <!-- End custom-content -->
    </div>
    <!-- End tab -->
  </div>
</div>

