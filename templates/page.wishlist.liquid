  {% capture cur_tag %}{{ tag }}{% endcapture %}
  {% if cur_tag contains tag_id %}
  {% assign cur_tag_size = cur_tag | size %}
  {% assign difference = tag_size | minus: cur_tag_size %}
  {% if difference == 0 %}{% assign the_test = tag_id %}
  {% else %}{% assign the_test = 'nutthin' %}
