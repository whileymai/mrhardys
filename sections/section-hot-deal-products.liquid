<!-- section-hot-deal-products.liquid -->
<div data-section-id="{{ section.id }}" data-section-type="section-hot-deal-products" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
{% assign products_limit = section.settings.sps_limit %}
{% assign col = section.settings.sps_collection %}
  <div class="wrap-slider-slick-home8" {% if section.settings.sps_bg == blank %}{% capture _img_url %}shdp_bg.jpg{% endcapture %}style="background: url({{ _img_url | asset_url }}) no-repeat;"{% else %}style="background: url({{ section.settings.sps_bg | img_url:'master' }}) no-repeat;"{% endif %}>
    <div class="container">
      <div class="title-text border-color-red">
        <h3>{{section.settings.sps_title}}</h3>
      </div>
      <!-- End title text -->
      <div class="time time-v3" data-countdown="countdown" data-date="{{section.settings.sps_time}}"></div>
      <div class="slider-slick-home8 slider">
        {% for product in collections[col].products limit: products_limit %}
        {% include 'product-item-hot-deal' %}
        {% else %}
        {% include 'onboarding-empty-s-hot-deal' %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Hot Deal Products",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "text",
      "id": "sps_title",
      "label": "Title",
      "default": "MOST WANTED"
    },
	{
      "type": "image_picker",
      "id": "sps_bg",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "sps_time",
      "label": "Time countdown",
      "info": "Format datatime: YYYY-MM-DD-hh-mm-ss",
      "default": "08-20-2017-10-20-30"
    },
    {
      "type": "collection",
      "id": "sps_collection",
      "label": "Select collection"
    },
    {
      "type": "text",
      "id": "sps_limit",
      "label": "Limit number of products",
      "default": "6"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Hot Deal Products",
      "category": "Product"
    }
  ]
}
{% endschema %}
