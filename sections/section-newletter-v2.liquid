{% if template == 'cart'  %}
<div data-section-id="{{ section.id }}" data-section-type="section-newletter-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div {% if section.settings.newletter_style == "f_width" %}class="container"{% else %}class="newsletter-home6" {% if section.settings.newletter_bg == blank %}{% capture _img_url %}newletter_v2_background.jpg{% endcapture %}style="background: url({{ _img_url | asset_url }}) no-repeat; background-size: cover;"{% else %}style="background: url({{ section.settings.newletter_bg | img_url:'master' }}) no-repeat; background-size: cover;"{% endif %}{% endif %}>
    <div {% if section.settings.newletter_style == "f_width" %}class="newsletter-home6" {% if section.settings.newletter_bg == blank %}{% capture _img_url %}newletter_v2_background.jpg{% endcapture %}style="background: url({{ _img_url | asset_url }}) no-repeat; background-size: cover;"{% else %}style="background: url({{ section.settings.newletter_bg | img_url:'master' }}) no-repeat; background-size: cover;"{% endif %}{% else %}class="container"{% endif %}>
      <div class="newsletter-content">
        <i class="icon {{section.settings.newletter_icon}}"></i>
        <h3>{{section.settings.newletter_title}}</h3>
        <p>{{section.settings.newletter_des}}</p>
        {% if settings.newsletter_form_action != blank %}
        {% assign form_action = settings.newsletter_form_action %}
        {% else %}
        {% assign form_action = '#' %}
        {% endif %}
        <form action="{{ form_action }}" method="post" accept-charset="utf-8">
          <input placeholder="{{section.settings.newletter_placeholder}}" type="email" onblur="if (this.value == '') {this.value = '{{section.settings.newletter_placeholder}}';}" onfocus="if(this.value != '') {this.value = '';}" value="{% if customer %}{{ customer.email }}{% endif %}" class="input-text required-entry validate-email" title="Sign up for our newsletter" id="newsletter" name="EMAIL">
          <button type="submit" title="{{section.settings.newletter_btn_name}}" class="button button1 hover-white">{{section.settings.newletter_btn_name}}<i class="link-icon-white"></i></button>
        </form>
      </div>
    </div>
  </div>
</div>
{% endif %} 


{% schema %}
{
  "name": "Newletter v2",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "info": "MailChimp form action URL: Setting in Login Store > Customize theme > General Settings tab > General > Mailchimp",
      "content": "Mailchimp"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "newletter_style",
      "options": [
        {
          "value": "f_width",
          "label": "Full Width"
        },
	    {
          "value": "f_screen",
          "label": "Full Screen"
        }
      ],
      "label": "Choose Style",
      "default": "f_width"
    },
    {
      "type": "image_picker",
      "id": "newletter_bg",
      "label": "Background Section"
    },
	{
      "type": "text",
      "id": "newletter_icon",
      "label": "Icon",
	  "info": "[Get icon from here](http://simplelineicons.com/)",
      "default": "icon-envelope-letter"
    },
    {
      "type": "text",
      "id": "newletter_title",
      "label": "Title",
      "default": "Sign up for newsletter"
    },
    {
      "type": "text",
      "id": "newletter_des",
      "label": "Description",
      "default": "to receive updates"
    },
	{
      "type": "text",
      "id": "newletter_placeholder",
      "label": "Input placeholder",
      "default": "Enter your email here..."
    },
    {
      "type": "text",
      "id": "newletter_btn_name",
      "label": "Button name",
      "default": "Subscribe"
    },
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Newletter v2",
      "category": "Subscribe Newletter"
    }
  ]
}
{% endschema %}
