<div data-section-id="{{ section.id }}" data-section-type="section-cta-newletter" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="main-content">
    <div class="newsletter">
      <div class="container">
        <div class="col-md-5">
          <div class="col-md-6">
            <div class="border-free-shipping">
              <h3>{{section.settings.cta_content_1}}</h3>
              <h3>{{section.settings.cta_content_2}}</h3>
              {% if section.settings.cta_btn_url != blank %}
              <a class="hover-black" href="{{section.settings.cta_btn_url}}" title="{{section.settings.cta_btn_name}}">{{section.settings.cta_btn_name}}<i class="link-icon-gray"></i></a>
              {% endif %}
            </div>
            <!-- End free shipping -->
          </div>
          <div class="col-md-6">
            <i class="icon {{section.settings.cta_icon}}"></i>
          </div>
        </div>
        <!-- End col-md-5 -->
        <div class="col-md-7">
          <div class="newsletter-content"  {% if section.settings.newletter_bg == blank %}{% capture _img_url %}cta_newletter_bg.jpg{% endcapture %}style="background: url({{ _img_url | asset_url }}) no-repeat;"{% else %}style="background: url({{ section.settings.newletter_bg | img_url:'master' }}) no-repeat;"{% endif %}>
            <i class="icon {{section.settings.newletter_icon}}"></i>
            <h3>{{section.settings.newletter_title}}</h3>
            <p>{{section.settings.newletter_des}}</p>
            {% if settings.newsletter_form_action != blank %}
            {% assign form_action = settings.newsletter_form_action %}
            {% else %}
            {% assign form_action = '#' %}
            {% endif %}
            <form action="{{ form_action }}" method="post" accept-charset="utf-8">
              <input placeholder="{{section.settings.newletter_placeholder}}" type="email" onblur="if (this.value == '') {this.value = '{{section.settings.newletter_placeholder}}';}" onfocus="if(this.value != '') {this.value = '';}" value="{% if customer %}{{ customer.email }}{% endif %}" class="input-text required-entry validate-email" title="Sign up for our newsletter" id="newsletter" name="EMAIL">
              <button type="submit" title="{{section.settings.newletter_btn_name}}" class="button button1 hover-black">{{section.settings.newletter_btn_name}}<i class="link-icon-white"></i></button>
            </form>
          </div>
          <!-- End newsletter-content -->
        </div>
        <!-- End col-md-7 -->
      </div>
      <!-- End container -->
    </div>
    <!-- End newsletter -->
  </div>
</div>

{% schema %}
{
  "name": "CTA & Newletter",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "CTA"
    },
    {
      "type": "text",
      "id": "cta_content_1",
      "label": "CTA content 1",
      "default": "Free shipping"
    },
    {
      "type": "text",
      "id": "cta_content_2",
      "label": "CTA content 2",
      "default": "on all orders of $25"
    },
    {
      "type": "text",
      "id": "cta_btn_name",
      "label": "CTA button name",
      "default": "Read more"
    },
    {
      "type": "text",
      "id": "cta_btn_url",
      "label": "CTA button url",
      "info": "if URL empty, Button don't show",
      "default": "\/collections\/all"
    },
    {
      "type": "text",
      "id": "cta_icon",
      "label": "Icon for CTA block 2",
      "info": "[Get icon from here](http://simplelineicons.com/)",
      "default": "icon-rocket"
    },
	{
      "type": "header",
      "info": "MailChimp form action URL: Setting in Login Store > Customize theme > General Settings tab > General > Mailchimp",
      "content": "Mailchimp"
    },
    {
      "type": "header",
      "content": "Newletter"
    },
    {
      "type": "image_picker",
      "id": "newletter_bg",
      "label": "Background Section"
    },
    {
      "type": "text",
      "id": "newletter_icon",
      "label": "Icon",
      "info": "[Get icon from here](http://simplelineicons.com/)",
      "default": "icon-envelope-letter"
    },
    {
      "type": "text",
      "id": "newletter_title",
      "label": "Title",
      "default": "SIGN UP FOR NEWSLETTER"
    },
    {
      "type": "text",
      "id": "newletter_des",
      "label": "Description",
      "default": "TO RECEIVE UPDATES"
    },
    {
      "type": "text",
      "id": "newletter_placeholder",
      "label": "Input placeholder",
      "default": "Enter your email here..."
    },
    {
      "type": "text",
      "id": "newletter_btn_name",
      "label": "Button name",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "CTA & Newletter",
      "category": "Subscribe Newletter"
    }
  ]
}
{% endschema %}
