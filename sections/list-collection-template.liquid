<div class="container">
  <div class="banner-header banner-lbook3 engoc_header_collection" style="background-image: url({% if section.settings.bgh_lists_collection == blank %}{% capture _img_url %}collection_ls_hbg.jpg{% endcapture %}{{ _img_url | asset_url}}{% else %}{{ section.settings.bgh_lists_collection | img_url:'master' }}{% endif %});">
    <div class="text">
      <h3>{{ 'collections.general.list_of_collection' | t }}</h3>
      <img class="border" src="{{ 'border_title_blog_detail.png' | asset_url }}" alt="border">
    </div>
  </div>
</div>
<!-- End wrap-breadcrumb -->
<div class="container container-ver2">
  <div class="tab-product-all tab-product-all-v2 tab-product-all-v3 tab-por" style="margin-top: 30px;">
    <ul class="tabs tabs-title tabs-title-por space-padding-tb-30" style="display:none;">
      <li class="item" rel="all"><span>all</span> </li>
    </ul>
    <div class="tab-container">
      <div id="all" class="tab-content">
        <div class="products">
          {% for collection in collections %}
          {% unless collection.handle == 'frontpage' %}
          <div class="item-inner">
            <div class="product text-center">
              {% if collection.image %}
              <div class="product-images">
                <a href="{{ collection.url }}" title="{{collection.title}}">
                  <img src="{{ collection.image | img_url: 'grande' }}" alt="{{collection.title}}"/>
                </a>
              </div>
              {% endif %}
              <a class="product-title" href="{{ collection.url }}" title="{{collection.title}}"><p class="text-center">{{collection.title}}</p></a>
              <a class="product-brand" href="{{ collection.url }}" >{{ collection.all_products_count }} {{ collection.all_products_count | pluralize: 'Item total', 'Items total' }}</a>
              <a class="quick-view" href="{{ collection.url }}" title="quick-view"><i class="icons icon-eye"></i></a>
            </div>
          </div>
          {% endunless %}
          {% endfor %}
        </div>
        <!-- End product-tab-content products -->
      </div>
    </div>
    <!-- End tab-container -->
  </div>
</div>

{% schema %}
  {
    "name": "List collections",
    "settings": [
      {
        "type": "image_picker",
        "id": "bgh_lists_collection",
        "label": "Image Header Background"
      }
	]
  }
{% endschema %}
