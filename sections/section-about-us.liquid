<div data-section-id="{{ section.id }}" data-section-type="section-about-us" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="banner-home7-top banner-private hover-images">
      {% if section.settings.aboutus_bg == blank %}
      <img src="{{ _img_url | asset_url}}" alt="bg banner">
      {% else %}
      <img src="{{ section.settings.aboutus_bg | img_url:'master' }}" alt="bg banner">
      {% endif %}
      <div class="text">
        {% if section.settings.aboutus_icon == blank %}
        {% else %}
        {% endif %}
        <h3>{{section.settings.aboutus_title}}</h3>
        <p>{{section.settings.aboutus_content}}</p>
        {% if section.settings.aboutus_btn_url != blank %}
        <a href="{{section.settings.aboutus_btn_url}}" title="{{section.settings.aboutus_btn_name}}">{{section.settings.aboutus_btn_name}}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "About Us",
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "aboutus_bg",
      "label": "Background"
    },
    {
      "type": "image_picker",
      "id": "aboutus_icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "aboutus_title",
      "label": "Title",
      "default": "Buy less, But better"
    },
    {
      "type": "textarea",
      "id": "aboutus_content",
      "label": "Content",
      "default": "Efficiently deliver integrated infomediaries without prospective relationships. Proactively network clicks-and-mortar value vis-a-vis enabled customer service.Interactively plagiarize resource maximizing imperatives whereas functional e-services."
    },
    {
      "type": "text",
      "id": "aboutus_btn_name",
      "label": "Button name",
      "default": "Our History"
    },
    {
      "type": "text",
      "id": "aboutus_btn_url",
      "label": "Button url",
      "info": "if URL empty, Button don't show",
      "default": "#"
    },
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "About Us",
      "category": "Content"
    }
  ]
}
{% endschema %}
