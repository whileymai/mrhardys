<div data-section-id="{{ section.id }}" data-section-type="section-featured-products" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  {% assign products_limit_grid = section.settings.fp_grid_limit %}
  {% assign col_grid = section.settings.fp_grid_collection %}
  
  {% assign products_limit_slider = section.settings.fp_slider_limit %}
  {% assign col_slider = section.settings.fp_slider_collection %}
  
  <div class="main-content">
    <div class="title-text">
      <h1>{{section.settings.fp_title}}</h1>
    </div>
    <div class="featured-product space-80">
      <div class="container">
        <div class="col-md-5">
          <div class="products">
            {% for product in collections[col_grid].products limit: products_limit_grid %}
            {% include 'product-item' %}
            {% else %}
            {% include 'onboarding-empty-s-featured-grid' %}
            {% endfor %}
          </div>
          <!-- End products -->
        </div>
        <!-- End col-md-5 -->
        <div class="col-md-7">
          <div class="products slider-one-item owl-nav-hidden dots-show">
            {% for product in collections[col_slider].products limit: products_limit_slider %}
            {% include 'product-item-featured' %}
            {% else %}
            {% include 'onboarding-empty-s-featured' %}
            {% endfor %}
          </div>
          <!-- End products -->
        </div>
      </div>
      <!-- End container -->
    </div>
    <!-- End featured-product -->
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "fp_title",
      "label": "Section Title",
      "default": "FEATURED PRODUCTS"
    },
	{
      "type": "header",
      "content": "Layout Grid"
    },
    {
      "type": "collection",
      "id": "fp_grid_collection",
      "label": "Select collection"
    },
	{
      "type": "text",
      "id": "fp_grid_limit",
      "label": "Limit number of products",
      "default": "4"
    },
	{
      "type": "header",
      "content": "Layout Slider"
    },
    {
      "type": "collection",
      "id": "fp_slider_collection",
      "label": "Select collection"
    },
	{
      "type": "text",
      "id": "fp_slider_limit",
      "label": "Limit number of products",
      "default": "2"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Product"
    }
  ]
}
{% endschema %}
