<div data-section-id="{{ section.id }}" data-section-type="section-testimonial" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="testimonial slider-one-item slider-one-item-home3 owl-nav-hidden dots-show" {% if section.settings.testimonial_bg == blank %}{% capture _img_url %}testimonial_background.jpg{% endcapture %}style="background: url({{ _img_url | asset_url }}) no-repeat;"{% else %}style="background: url({{ section.settings.testimonial_bg | img_url:'master' }}) no-repeat;"{% endif %}>
      {% if section.blocks.size > 0 %}
      {%- assign i = 1 -%}
      {% for block in section.blocks %}
      <div class="items">
        <div class="text">
          <h3>{{block.settings.testimonial_title}}</h3>
          <p>{{block.settings.testimonial_content}}</p>
          <div class="wrap-star">
            {% if block.settings.star_ratings == "1_star" %}
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            {% elsif block.settings.star_ratings == "2_star" %}
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            {% elsif block.settings.star_ratings == "3_star" %}
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            {% elsif block.settings.star_ratings == "4_star" %}
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            {% elsif block.settings.star_ratings == "5_star" %}
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            <a href="{{shop.url}}" title="star"><i class="fa fa-star"></i></a>
            {% endif %}
          </div>
          <p class="images">
            {% if block.settings.customer_img == blank %}
            {% capture _img_url %}testimonial_customer{{i}}.jpg{% endcapture %}
            <img src="{{ _img_url | asset_url}}" alt="">
            {% else %}
            <img src="{{ block.settings.customer_img | img_url:'master' }}" alt="customer img">
            {% endif %}
          </p>
          <p class="user-name">{{block.settings.customer_name}}</p>
        </div>
      </div>
      {%- assign i = i | plus : 1 -%}
      {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Testimonial",
  "max_blocks": 3,
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "testimonial_bg",
      "label": "Background Section"
    },
	{
      "type": "header",
