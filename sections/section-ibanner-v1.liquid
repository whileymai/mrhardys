<div data-section-id="{{ section.id }}" data-section-type="section-ibanner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="banner-home4-top">
      <div class="col-md-6 hover-images">
        <a href="{{section.settings.ib1_url}}" title="banner">
        {% if section.settings.ib1_background == blank %}
        {% capture _img_url %}ib_v1_bg1.jpg{% endcapture %}
        <img src="{{ _img_url | asset_url}}" alt="">
        {% else %}
        <img src="{{ section.settings.ib1_background | img_url:'master' }}" alt="banner">
        {% endif %}
        </a>
        <div class="text">
          <a href="{{section.settings.ib1_url}}"><h1>{{section.settings.ib1_content_1}}</h1></a> 
          <h2>{{section.settings.ib1_content_2}}</h2>
        </div>
      </div>
      <div class="col-md-6">
        <div class="col-md-6">
          <div class="col-md-12 col-sm-6 col-xs-6 hover-images">
            <a href="{{section.settings.ib2_url}}" title="banner">
