            <img src="{{ _img_url | asset_url}}" alt="">
            {% else %}
            <img src="{{ section.settings.ib3_background | img_url:'master' }}" alt="banner">
            {% endif %}
            </a>
            <div class="text">
            <a href="{{section.settings.ib3_url}}"><h1>{{section.settings.ib3_content_1}}</h1></a> 
            <h2>{{section.settings.ib3_content_2}}</h2>
            </div>
          </div>
        </div>
        <div class="col-md-6 hover-images">
          <a href="{{section.settings.ib4_url}}" title="banner">
