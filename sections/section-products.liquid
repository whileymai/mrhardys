<!-- section-products.liquid -->
<div data-section-id="{{ section.id }}" data-section-type="section-products" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
{% assign products_limit = section.settings.sps_limit %}
{% assign col = section.settings.sps_collection %}
  <div class="main-content"{% if section.settings.sps_bg == blank %}{% else %} style="margin-top: 0px; background: url({{ section.settings.sps_bg | img_url:'master' }});"{% endif %}>
    <div class="title-text">
      <h3>{{section.settings.sps_title}}</h3>
    </div>
    <div class="container">
      <div class="slider-product our-new-product owl-nav-hidden space-30">
        <div class="product-tab-content products">
          {% for product in collections[col].products limit: products_limit %}
          {% include 'product-item' %}
          {% else %}
          {% include 'onboarding-empty-s-products' %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Products",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "image_picker",
      "id": "sps_bg",
      "label": "Background"
    },
    {
      "type": "text",
      "id": "sps_title",
      "label": "Title",
      "default": "FEATURED PRODUCTS"
    },
    {
      "type": "collection",
      "id": "sps_collection",
      "label": "Select collection"
    },
    {
      "type": "text",
      "id": "sps_limit",
      "label": "Limit number of products",
      "default": "8"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Products",
      "category": "Product"
    }
  ]
}
{% endschema %}
