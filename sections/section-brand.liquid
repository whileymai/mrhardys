<div data-section-id="{{ section.id }}" data-section-type="section-brand" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="brand-content">
      {% if section.blocks.size > 0 %}
      {%- assign i = 1 -%}
      {% for block in section.blocks %}
      <div class="items">
        <a href="{{block.settings.brand_url}}" title="brand">
          {% if block.settings.brand_img == blank %}
          {% capture _img_url %}brand_{{i}}.jpg{% endcapture %}
          <img src="{{ _img_url | asset_url}}" alt="">
          {% else %}
          <img src="{{ block.settings.brand_img | img_url:'master' }}" alt="Brand">
          {% endif %}
        </a>
      </div>
      {%- assign i = i | plus : 1 -%}
      {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

