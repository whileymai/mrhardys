<div data-section-id="{{ section.id }}" data-section-type="section-ibanner-newletter" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="newsletter-home4">
      <div class="col-md-4">
        <div class="items">
          <a href="{{ section.settings.banner1_url }}">
            {% if section.settings.banner1_bg == blank %}
            {% capture _img_url %}ib_newletter_banner1.jpg{% endcapture %}
            <img src="{{ _img_url | asset_url}}" alt="banner">
            {% else %}
            <img src="{{ section.settings.banner1_bg | img_url:'master' }}" alt="banner">
            {% endif %}
          </a>
          <div class="text">
            <h3>{{section.settings.banner1_content1}}</h3>
            <p>{{section.settings.banner1_content2}} </p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="items">
          {% if section.settings.newletter_bg == blank %}
          {% capture _img_url %}ib_newletter_bg.jpg{% endcapture %}
          <img src="{{ _img_url | asset_url}}" alt="newletter">
          {% else %}
          <img src="{{ section.settings.newletter_bg | img_url:'master' }}" alt="newletter">
          {% endif %}
          <div class="text">
            <i class="icon {{section.settings.newletter_icon}}"></i>
            <h3>{{section.settings.newletter_title}}</h3>
            <p>{{section.settings.newletter_des}}</p>
          </div>
          {% if settings.newsletter_form_action != blank %}
          {% assign form_action = settings.newsletter_form_action %}
          {% else %}
          {% assign form_action = '#' %}
          {% endif %}
          <form action="{{ form_action }}" method="post" accept-charset="utf-8">
            <input placeholder="{{section.settings.newletter_placeholder}}" type="email" onblur="if (this.value == '') {this.value = '{{section.settings.newletter_placeholder}}';}" onfocus="if(this.value != '') {this.value = '';}" value="{% if customer %}{{ customer.email }}{% endif %}" class="input-text required-entry validate-email" title="Sign up for our newsletter" id="newsletter" name="EMAIL">
            <button class="button button1 hover-white" title="{{section.settings.newletter_btn_name}}" type="submit">{{section.settings.newletter_btn_name}}<i class="link-icon-white"></i></button>
          </form>
        </div>
      </div>
      <div class="col-md-4">
        <div class="items">
          <a href="{{ section.settings.banner2_url }}">
            {% if section.settings.banner2_bg == blank %}
            {% capture _img_url %}ib_newletter_banner2.jpg{% endcapture %}
            <img src="{{ _img_url | asset_url}}" alt="banner">
            {% else %}
            <img src="{{ section.settings.banner2_bg | img_url:'master' }}" alt="banner">
            {% endif %}
          </a>
          <div class="text">
            <h3>{{section.settings.banner2_content1}}</h3>
            <p>{{section.settings.banner2_content2}} </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "iBanner & Newletter",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Banner Left"
    },
    {
      "type": "image_picker",
      "id": "banner1_bg",
      "label": "Background"
    },
	{
      "type": "text",
      "id": "banner1_content1",
      "label": "Content 1",
      "default": "FaQ"
    },
    {
      "type": "text",
      "id": "banner1_content2",
      "label": "Content 2",
      "default": "Assertively recaptiualize quality"
    },
    {
      "type": "text",
      "id": "banner1_url",
      "label": "URL",
      "default": "#"
    },
	{
      "type": "header",
      "info": "MailChimp form action URL: Setting in Login Store > Customize theme > General Settings tab > General > Mailchimp",
      "content": "Mailchimp"
    },
    {
      "type": "header",
      "content": "Newletter"
    },
    {
      "type": "image_picker",
      "id": "newletter_bg",
      "label": "Background Newletter"
    },
	{
      "type": "text",
      "id": "newletter_icon",
      "label": "Icon",
	  "info": "[Get icon from here](http://simplelineicons.com/)",
      "default": "icon-envelope-letter"
    },
    {
      "type": "text",
      "id": "newletter_title",
      "label": "Title",
      "default": "SIGN UP FOR NEWSLETTER"
    },
    {
      "type": "text",
      "id": "newletter_des",
      "label": "Description",
      "default": "TO RECEIVE UPDATES"
    },
	{
      "type": "text",
      "id": "newletter_placeholder",
      "label": "Input placeholder",
      "default": "Enter your email here..."
    },
    {
      "type": "text",
      "id": "newletter_btn_name",
      "label": "Button name",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Banner Right"
    },
    {
      "type": "image_picker",
      "id": "banner2_bg",
      "label": "Background"
    },
	{
      "type": "text",
      "id": "banner2_content1",
      "label": "Content 1",
      "default": "Our Blog"
    },
    {
      "type": "text",
      "id": "banner2_content2",
      "label": "Content 2",
      "default": "Assertively recaptiualize quality"
    },
    {
      "type": "text",
      "id": "banner2_url",
      "label": "URL",
      "default": "#"
    },
	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "iBanner & Newletter",
      "category": "Subscribe Newletter"
    }
  ]
}
{% endschema %}
