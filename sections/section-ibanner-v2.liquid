            "ib_url": "collections/all"
          }
        },
        {
          "type": "banner",
          "settings": {
            "ib_content_1": "New arrivals",
            "ib_content_2": "recaptiualize quality",
            "ib_url": "collections/all"
          }
        },
		{
          "type": "banner",
          "settings": {
            "ib_content_1": "Lookbook",
            "ib_content_2": "recaptiualize quality",
            "ib_url": "collections/all"
          }
        },
        {
          "type": "banner",
          "settings": {
            "ib_content_1": "House & Home",
            "ib_content_2": "recaptiualize quality",
            "ib_url": "collections/all"
          }
        }
      ]
    }
  ]
}
{% endschema %}
