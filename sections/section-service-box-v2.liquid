<div data-section-id="{{ section.id }}" data-section-type="section-service-box-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="main-content">
    <div class="container">
      <div class="shipping-v2" {% if section.settings.cta_background == blank %}{% capture _img_url %}sb_v2_bg.jpg{% endcapture %}style="background: url({{ _img_url | asset_url}} ) no-repeat;"{% else %}style="background: url({{ section.settings.sb_v2_background | img_url:'master' }}) no-repeat; background-size: cover;"{% endif %}>
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        <div class="col-md-3 col-sm-3 col-xs-6">
          {% if block.settings.enable_sb_v2_icon_img %}
          <img src="{{ block.settings.icon_svb | img_url:'master' }}" alt="{{block.settings.sb_v2_title}}">
          {% else %}
          <i class="{{block.settings.sb_v2_icon}} icons"></i>
          {% endif %}
          <h3>{{block.settings.sb_v2_title}}</h3>
          <p>{{block.settings.sb_v2_content}}</p>
        </div>
        {% endfor %}
        {% endif %}
      </div>
      <!-- End container -->
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Service Box v2",
  "class": "index-section",
  "max_blocks": 4,
  "settings": [
	{
      "type": "image_picker",
      "id": "sb_v2_background",
      "label": "Background"
    },    
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "box",
      "name": "Box",
      "settings": [
        {
          "type": "text",
          "id": "sb_v2_title",
          "label": "Title",
          "default": "Store Locator."
        },
		{
          "type": "text",
          "id": "sb_v2_content",
          "label": "Content",
          "default": "Find your nearest Evans store."
        },
        {
          "type": "text",
          "id": "sb_v2_icon",
          "label": "Icon",
          "info": "[Get icon from here](http://simplelineicons.com/)",
          "default": "icon-pointer"
        },
        {
          "type": "checkbox",
          "id": "enable_sb_v2_icon_img",
          "label": "Use Image Icon?",
          "default": false
        },
        {
          "type": "image_picker",
          "id": "icon_svb",
          "label": "Image Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service Box v2",
      "category": "Content",
	  "blocks": [
        {
          "type": "box",
          "settings": {
            "sb_v2_title": "Store Locator.",
			"sb_v2_content": "Find your nearest Evans store.",
            "sb_v2_icon": "icon-pointer"
          }
        },
        {
          "type": "box",
          "settings": {
            "sb_v2_title": "Delivery & Returns.",
			"sb_v2_content": "Delivery & returns information.",
            "sb_v2_icon": "icon-plane"
          }
        },
        {
          "type": "box",
          "settings": {
            "sb_v2_title": "Cosre application.",
			"sb_v2_content": "Download the cosre mobile App.",
            "sb_v2_icon": "icon-screen-smartphone"
          }
        },
        {
          "type": "box",
          "settings": {
            "sb_v2_title": "Help & Support",
			"sb_v2_content": "Find the answers to your questions.",
            "sb_v2_icon": "icon-support"
          }
        }
      ]
    }
  ]
}
{% endschema %}
