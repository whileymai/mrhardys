<div class="item">
	<div class="product-image">
		<a href="{{ product.url | within: collection }}" title="">
			<img class="product-featured-image" src="{{ product.featured_image.src | img_url: 'grande' }}" alt="{{ product.featured_image.alt | escape }}">
		</a>
	</div>
	<div class="product-meta">
			<a class="product-name" href="{{ product.url | within: collection }}" title="{{ product.title }}" >{{ product.title }}</a>

		<div class="product-price">
			<span class="amout">
				{% capture price %}{{ product.price | money }}{% endcapture %}
				{% if on_sale %} <del class="sale-price">{{ product.compare_at_price | money }}</del>
				{% endif %}
				<span>
					{% if product.price_varies %}{{ 'products.general.from_text_html' | t: price: price }}{% else %}{{ price }}{% endif %}
				</span>
			</span>

		</div>	<!-- /.product-price -->
		<span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
	</div><!-- /.product-meta -->
</div>