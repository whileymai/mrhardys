<header id="header" class="header-v3 header-v8 engoc_header_s6">
  {% if settings.hds6_topbar_enable %}
  <div id="topbar" class="topbar-v3">
    <div class="container">
      <div class="topbar-left">
        <div class="social">
          <a href="/account/login" title="login"><i class="{{settings.hds6_acc_icon}} icons"></i></a>
        </div>
        <!-- End Social -->
      </div>
      <!-- End topBar-left -->
      <div class="logo">
        <a href="{{shop.url}}" title="Logo">
            {% if settings.hds6_svg_logo_enable %}
            	{{settings.hds6_svg_logo}}
            {% else %}
            	{% if settings.hds6_logo == blank %}
                {% capture _img_url %}uno_logo_white.png{% endcapture %}
                <img src="{{ _img_url | asset_url}}" alt="">
                {% else %}
          		<img src="{{settings.hds6_logo | img_url:'master'}}" alt="logo">
                {% endif %}
            {% endif %}
        </a>
      </div>
      <div class="topbar-right">
        <div class="sign-in">
          <div class="search dropdown" data-toggle="modal" data-target=".bs-example-modal-lg">
            <i class="icons {{settings.hds6_search_icon}} dropdown-toggle"></i>
          </div>
          <!-- End search -->
          {% comment %}
          {% include 'modal-search' %}
          {% endcomment %}
          <div class="cart">
            <p class="icon-cart">
              <i class="icons {{settings.hds6_cart_icon}}"></i>
              <span id="CartCount" class="cart-count">{{ cart.item_count }}</span>
            </p>
          </div>
          <!-- End cart -->
        </div>
        <!-- End SignIn -->
      </div>
      <!-- End topbar-right -->
    </div>
    <!-- End container -->
  </div>
  {% endif %}
  <div class="header-top">
    <div class="container">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <p class="icon-menu-mobile"><i class="fa fa-bars" ></i></p>
        <div class="logo-mobile">
          <a href="{{shop.url}}" title="Logo">
            {% if settings.hds6_mobile_svg_logo_enable %}
            	{{settings.hds6_mobile_svg_logo}}
            {% else %}
            	{% if settings.hds6_mobile_logo == blank %}
                {% capture _img_url %}uno_logo_black.png{% endcapture %}
                <img src="{{ _img_url | asset_url}}" alt="">
                {% else %}
          		<img src="{{settings.hds6_mobile_logo | img_url:'master'}}" alt="logo">
                {% endif %}
            {% endif %}
          </a>
        </div>
        {% include 'menu' %}
      </div>
    </div>
    <!-- End container -->
  </div>
  <!-- End header-top -->
</header>