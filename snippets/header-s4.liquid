<header id="header" class="header-v3 header-v6 engoc_header_s4">
  <div id="topbar" class="topbar-v3">
    <div class="container">
      <div class="topbar-left">
        <div class="social">
          <span class="icon-pushmenu">{{settings.hds4_menu_content}}</span>
          <a href="/account/login" title="login"><i class="{{settings.hds4_acc_icon}} icons"></i></a>
          <a href="javascript:void(0)" title="mail"><i class="icons {{settings.hds4_mail_icon}}"></i></a>
        </div>
        <!-- End Social -->
      </div>
      <!-- End topBar-left -->
      <div class="logo">
        <a href="{{shop.url}}" title="Logo">
          {% if settings.hds4_svg_logo_enable %}
            	{{settings.hds4_svg_logo}}
            {% else %}
            	{% if settings.hds4_logo == blank %}
                {% capture _img_url %}uno_logo_black.png{% endcapture %}
                <img src="{{ _img_url | asset_url}}" alt="">
                {% else %}
          		<img src="{{settings.hds4_logo | img_url:'master'}}" alt="logo">
                {% endif %}
            {% endif %}
        </a>
      </div>
      <div class="topbar-right">
        <div class="sign-in">
          <div class="search search-v2 dropdown" data-toggle="modal" data-target=".bs-example-modal-lg">
            <i class="icons {{settings.hds4_search_icon}} dropdown-toggle"></i>
          </div>
          <!-- End search -->
          {% comment %}
          {% include 'modal-search' %}
          {% endcomment %}
          <div class="cart">
            <p class="icon-cart">
              <i class="icons {{settings.hds4_cart_icon}}"></i>
              <span id="CartCount" class="cart-count">{{ cart.item_count }}</span>
            </p>
          </div>
          <!-- End cart -->
        </div>
        <!-- End SignIn -->
      </div>
      <!-- End topbar-right -->
    </div>
    <!-- End container -->
  </div>
  <!-- End Top Bar -->
</header>