<footer id="footer" class="footer-v1 engoc_footer_s2">         
  <div{% if settings.fs2_style == "fs2_fw" %} class="container"{% else %}{% endif %}>
    <div class="footer-top">
      <div class="logo-footer">
        {% if settings.enable_svglogo_fs2 %}
        <a href="{{shop.url}}" title="Logo">
          {{settings.svglogo_text_fs2}}
        </a>
        {% else %}
        <a href="{{shop.url}}" title="Logo">
          <img src="{{ 'fs2_logo_black.png' | asset_url }}" alt="Logo">
        </a>
        {% endif %}
      </div>
      {% if settings.fs2_menu != blank %}
      <div class="menu-footer">
        {% assign footer_menu = settings.fs2_menu %}
        <ul>
          {% for link in linklists[footer_menu].links %}
          <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>    
      </div>
      {% endif %}
      <!-- End menu-footer -->
      {% if settings.fs2_social != blank %}
      <div class="social">
        {{settings.fs2_social}}
      </div>
      {% endif %}
      <!-- End social -->
    </div>
    <!-- End footer-top -->
    
    {% if settings.fs2_style == "fs2_fw" %}{% else %}<div class="container">{% endif %}
    <div class="footer-bottom">
      {% if settings.fs2_copyright != blank %}
      <p class="left">{{settings.fs2_copyright}}</p>
      {% else %}
      <p class="left">Copyright &copy; {{ 'now' | date: "%Y" }} by <a href="http://engotheme.com" title="EngoTheme" target="_blank">EngoTheme</a>. All Rights Reserved.
      {% comment %}  <br> <small>{{ powered_by_link }}</small> {% endcomment %}
      </p>
      {% endif %}
      
      <div class="right">
        {% include 'currency-picker' %}
      </div>
    </div>
    {% if settings.fs2_style == "fs2_fw" %}{% else %}</div>{% endif %}
    
  </div>
  <!-- End container -->
</footer>