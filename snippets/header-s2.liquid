<header id="header" class="header-v1 header-top-absolute engoc_header_s2">
  {% if settings.hds2_topbar_enable %}
  <div id="topbar">
    <div class="container">
      <div class="topbar-left">
        <div class="social">
          {{settings.hds2_topbar_left_content}}
        </div>
        <!-- End Social -->
      </div>
      <!-- End topBar-left -->
      <div class="topbar-right">
        <div class="sign-in">
          <a href="mailto:{{settings.hds2_mail_content}}" title="{{settings.hds2_mail_content}}"><i class="icons {{settings.hds2_mail_icon}}"></i><span>{{settings.hds2_mail_content}}</span></a>
          <a href="/account/login" title="{{settings.hds2_acc_content}}"><i class="{{settings.hds2_acc_icon}} icons"></i><span>{{settings.hds2_acc_content}}</span></a>
          <a href="/pages/wish-list" title="{{settings.hds2_wishlist_content}}"><i class="{{settings.hds2_wishlist_icon}} icons"></i><span>{{settings.hds2_wishlist_content}}</span></a>
          <div class="search dropdown" data-toggle="modal" data-target=".bs-example-modal-lg">
            <i class="icons {{settings.hds2_search_icon}} dropdown-toggle"></i><span>{{settings.hds2_search_content}}</span>
          </div>
          <!-- End search -->
        </div>
        <!-- End SignIn -->
      </div>
      <!-- End topbar-right -->
    </div>
    <!-- End container -->
  </div>
  {% endif %}
  <!-- End Top Bar -->
  <div class="header-top">
    <div class="container">
      <div class="col-md-10 col-sm-9 col-xs-12">
        <p class="icon-menu-mobile"><i class="fa fa-bars" ></i></p>
        <div class="logo">
          <a href="{{shop.url}}" title="Uno">
          	{% if settings.hds2_svg_logo_enable %}
            	{{settings.hds2_svg_logo}}
            {% else %}
            	{% if settings.hds2_logo == blank %}
                {% capture _img_url %}uno_logo_white.png{% endcapture %}
                <img src="{{ _img_url | asset_url}}" alt="">
                {% else %}
          		<img src="{{settings.hds2_logo | img_url:'master'}}" alt="logo">
                {% endif %}
            {% endif %}
          </a>
        </div>
        <div class="logo-mobile">
          <a href="{{shop.url}}" title="Uno">
            {% if settings.hds2_mobile_svg_logo_enable %}
            	{{settings.hds2_mobile_svg_logo}}
            {% else %}
            	{% if settings.hds2_mobile_logo == blank %}
                {% capture _img_url %}uno_logo_black.png{% endcapture %}
                <img src="{{ _img_url | asset_url}}" alt="">
                {% else %}
          		<img src="{{settings.hds2_mobile_logo | img_url:'master'}}" alt="logo">
                {% endif %}
            {% endif %}
          </a>
        </div>
        {% include 'menu' %}
      </div>
      <div class="col-md-2 col-sm-3 col-xs-12">
        <div class="cart">
          <p class="icon-cart" title="Add to cart">
            <i class="icons {{settings.hds2_cart_icon}}"></i>
            <span id="CartCount" class="cart-count">{{ cart.item_count }}</span>
          </p>
        </div>
        <!-- End cart -->
      </div>                
    </div>
    <!-- End container -->
  </div>
  <!-- End header-top -->
</header>