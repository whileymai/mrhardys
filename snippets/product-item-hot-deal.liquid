{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
{% assign on_sale = true %}
{% endif %}

{% assign sold_out = true %}
{% if product.available %}
{% assign sold_out = false %}
{% endif %}

<div class="items">
  <a class="product-images" href="{{ product.url | within: collection }}">
    <img src="{{ product.featured_image.src | img_url: 'grande' }}" alt="{{ product.featured_image.alt | escape }}">
  </a>  
  <div class="text">
    <a href="{{ product.url | within: collection }}" title="{{ product.title }}"><h3>{{ product.title }}</h3></a>
    {% capture price %}{{ product.price | money }}{% endcapture %}
    <p>{% if product.price_varies %}{{ 'products.general.from_text_html' | t: price: price }}{% else %}{{ price }}{% endif %}
    {% if on_sale %} <del>{{ product.compare_at_price | money }}</del> {% endif %}
    </p>
  </div>
</div>